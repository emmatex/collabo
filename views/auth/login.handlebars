<main class="main-login">
    <br />
    {{#if errorMessage}}
    <div class="user-message user-message-error">{{ errorMessage }}</div>
    {{/if}}
    <div class="card">
        <form class="login-form" action="/login" method="POST">

            <div class="form-group has-success">
                <label class="form-control-label" for="inputSuccess1">Email</label>
                <input type="email" name="email" class="form-control" id="inputValid" required>
            </div>

            <div class="form-group has-danger">
                <label class="form-control-label" for="inputDanger1">Password</label>
                <input type="password" name="password" class="form-control" id="inputInvalid" required>
            </div>

            <br />
            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <button type="submit" class="btn btn-outline-primary btn-block">Login</button>

            <br />
            <div class="centered">
                <a href="/reset">Reset Password</a>
            </div>
        </form>

    </div>
</main>