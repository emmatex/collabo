<main class="main-register">
    <div class="card">
        <form class="register-form" action="/register" method="POST">
            <div class="form-group has-success">
                <label class="form-control-label" for="inputSuccess1">User Name</label>
                <input type="text" name="name" class="form-control is-valid" id="inputValid">
            </div>

            <div class="form-group has-success">
                <label class="form-control-label" for="inputSuccess1">Email</label>
                <input type="text" name="email" class="form-control is-valid" id="inputValid">
            </div>

            <div class="form-group has-danger">
                <label class="form-control-label" for="inputDanger1">Password</label>
                <input type="password" name="password" class="form-control is-invalid" id="inputInvalid">
            </div>

            <div class="form-group has-danger">
                <label class="form-control-label" for="inputDanger1">Confirm Password</label>
                <input type="password" name="confirmPassword" class="form-control is-invalid" id="inputInvalid">
            </div>
            <button type="submit" class="btn btn-outline-primary btn-block">Register</button>
        </form>
    </div>
</main>